<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ie.dalydev.dogbreeding.DisplayActivity"
    tools:showIn="@layout/activity_display">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lethabo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/lethabogsd_logo1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dalyDev"
        android:id="@+id/dalyDev"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <!-- <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Name"
        android:id="@+id/orderByName"
        android:layout_below="@+id/lethabo"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Gender"
        android:id="@+id/orderByGender"
        android:layout_alignTop="@+id/orderByName"
        android:layout_toEndOf="@+id/orderByName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Age"
        android:id="@+id/orderByAge"
        android:layout_alignTop="@+id/orderByGender"
        android:layout_toEndOf="@+id/orderByGender" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DeleteAll"
        android:id="@+id/buttonDeleteAll"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/dalyDev"
        android:onClick="deleteAllDogs" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showDog"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lethabo"
        android:layout_above="@+id/buttonDeleteAll"
        android:choiceMode="singleChoice" />



</RelativeLayout>
